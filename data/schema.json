{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Black Water Data Schema",
  "definitions": {
    "Member": {
      "type": "object",
      "required": ["codeName", "matricule", "rang", "statut", "portrait"],
      "properties": {
        "codeName": { "type": "string" },
        "matricule": { "type": "string" },
        "rang": {
          "type": "string",
          "enum": [
            "Operateur",
            "Sergent",
            "Lieutenant",
            "Capitaine",
            "Commandant"
          ]
        },
        "statut": {
          "type": "string",
          "enum": ["Actif", "Disparu", "Inconnu", "Retire"]
        },
        "portrait": { "type": "string" },
        "resume": { "type": "string" },
        "historique": {
          "type": "array",
          "items": { "type": "string" }
        },
        "profilPsy": {
          "type": "object",
          "properties": {
            "traits": { "type": "array", "items": { "type": "string" } },
            "vulnerabilites": { "type": "array", "items": { "type": "string" } }
          }
        },
        "competences": {
          "type": "array",
          "items": { "type": "string" }
        },
        "activitesRecentes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string" },
              "titre": { "type": "string" },
              "resume": { "type": "string" }
            },
            "required": ["date", "titre", "resume"]
          }
        },
        "infosSupplementaires": { "type": "string" },
        "visible": { "type": "boolean" }
      }
    }
  }
}
